<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attendee Home</title>
    <link href="/tailwind.css" rel="stylesheet">
</head>

<body class="bg-gray-100 font-sans leading-normal tracking-normal">
    <div class="container mx-auto p-6">
        <!--//page section-->
        <h1 class="text-sm font-semibold text-gray-600">
            Attendee Home Page
        </h1>
        <!--//main title-->
        <div class="text-center mb-6">
            <h2 class="text-3xl text-gray-800">
                <%= settings.name %>
            </h2>
            <p class="text-base text-gray-600 mt-1">
                <%= settings.description %>
            </p>
        </div>

        <!--//all the events availables-->
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Available Events</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% events.forEach(event=> { %>
                <div class="bg-white rounded shadow p-4 border border-gray-300">
                    <div class="flex justify-between items-center mb-2">
                        <h4 class="text-sm font-semibold text-blue-700">
                            <%= event.title %>
                        </h4>
                        <p class="text-sm text-black">
                            <%= event.date || "Not set" %>
                        </p>
                    </div>
                    <p class="text-sm text-gray-600 mb-4">
                        <%= event.description %>
                    </p>
                    <a href="/attendee/event/<%= event.id %>"
                        class="px-4 py-2 text-blue-700 border-2 border-blue-700 rounded shadow hover:bg-blue-50 focus:ring focus:ring-blue-300 focus:outline-none text-sm">
                        View & Book
                    </a>
                </div>
                <% }) %>
        </div>
    </div>
</body>

</html>